@model IList<ManufacturerModel>
@{
    Layout = "~/Views/Shared/_ColumnsTwo.cshtml";

    //title
    Html.AddTitleParts(T("PageTitle.Manufacturers").Text);
}
@using Nop.Web.Models.Catalog;

@*breadcrumb*@
<div>
    <ol class="breadcrumb">
        <li><a href="@Url.RouteUrl("HomePage")" title="@T("Categories.Breadcrumb.Top")">@T("Categories.Breadcrumb.Top")</a></li>
    </ol>
</div>

<div class="page category-page">
    <div class="panel panel-default form-panel">
        <div class="panel-heading">
            <h3>@T("Manufacturers.List")</h3>
        </div>
        <div class="panel-body">
            <div class="page-body">
                @*description*@

                @*<div class="category-description">
                        Description - static
                    </div>*@
                @{
                    int i = 0;
                }

                <div class="product-grid home-page-product-grid">
                    @foreach (var item in Model)
                    {
                        i++;
                        if (i % 3 == 0)
                        {
                            @Html.Raw("<div class='row'>")
                        }

                        <div class="col-md-4">
                            <div class="pull-text-center">
                                <div class="picture" style="float:left;">
                                    <a href="@Url.RouteUrl("Manufacturer", new { SeName = item.SeName })" title="@item.PictureModel.Title">
                                        <img alt="@item.PictureModel.AlternateText" src="@item.PictureModel.ImageUrl" title="@item.PictureModel.Title" />
                                    </a>
                                </div>
                                <div class="details">
                                    <h2 class="product-title">
                                        <a href="@Url.RouteUrl("Manufacturer", new { SeName = item.SeName })" title="@item.PictureModel.Title">
                                            @item.Name
                                        </a>
                                    </h2>

                                </div>
                            </div>
                        </div>
                        if ((i % 3 == (3 - 1)) ||
                            //last image
                (i == (Model.Count - 1)))
                        {
                            @Html.Raw("</div>")
                        }
                    }
                </div>

            </div>
        </div>

